<?xml version="1.0" encoding="UTF-8"?>
<config>
    <xbeeConfig>
        <serialPort>/dev/tty.usbserial-A1000iMG</serialPort>
        <baudRate>9600</baudRate>
    </xbeeConfig>

    <nodeDiscovery>
        <enabled>true</enabled>
        <discoveryTimeout>5000</discoveryTimeout>
    </nodeDiscovery>

    <networkTester>
        <pingRetries>3</pingRetries> 
        <pingTimeout>1000</pingTimeout> 
    </networkTester>
    <performanceMonitor>
        <enabled>true</enabled>
        <rttThreshold>1000</rttThreshold>
        <enableLogging>true</enableLogging>
    </performanceMonitor>

    <testNodes>
        <nodeAddress>0013A20040A1B32A</nodeAddress> 
    </testNodes>
</config>
